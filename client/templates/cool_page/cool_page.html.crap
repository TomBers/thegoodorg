<template name="CoolPage">
	<div class="page-container container">
		<div class="row">
			<div class="col-md-12" id="content">
				<div class="row" id="title_row">
					<div class="col-md-12">
						<div id="page_menu" class="pull-right">
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div id="menu" class="col-sm-3 col-md-2">
				<h2>
				</h2>
				{{> CoolPageSideMenu}}
			</div>
			<div id="subcontent" class="col-sm-9 col-md-10">
				{{> yield region='CoolPageSubcontent'}}
			</div>
		</div>
	</div>
</template>

<template name="CoolPageSideMenu">
	<ul id="menu-items" class="nav nav-pills nav-stacked">
		<li id="menu-item-simple" class="{{menuItemClass 'cool_page.sub_page_a'}}">
			<a href="{{pathFor 'cool_page.sub_page_a'}}">
				Sub-Page A derp
			</a>
		</li>
		<li id="menu-item-simple" class="{{menuItemClass 'cool_page.sub_page_b'}}">
			<a href="{{pathFor 'cool_page.sub_page_b'}}">
				Sub-Page B derp
			</a>
		</li>
	</ul>
</template>
